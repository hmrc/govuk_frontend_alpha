{% macro phaseBanner(phase, message, messageHtml) %}
<div class="gv-c-phase-banner">
  <p class="gv-c-phase-banner__content">
    <strong class="gv-c-phase-tag">{{ phase }}</strong>
    <span class="gv-c-phase-banner__text">{% if message %}{{ message }}{% else %}{{ messageHtml | safe }}{% endif %}</span>
  </p>
</div>

{% endmacro %}