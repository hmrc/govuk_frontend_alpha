<% id = id or nil %>
<% name = name or nil %>
<% legend = legend or nil %>
<% hint = hint or nil %>
<% error = error or nil %>
<% checkboxGroup = checkboxGroup or nil %>
<div class="gv-c-form-group <% if error %>gv-c-form-group--has-error<% end %>">
  <fieldset>

    <legend>
      <span class="gv-c-form-group__label"><%= legend %></span>
      <% if hint %>
        <span class="gv-c-form-group__hint"><%= hint %></span>
      <% end %>
      <% if error %>
        <span class="gv-c-form-group__error-message"><%= error %></span>
      <% end %>
    </legend>

    <% checkboxGroup.each do |checkbox| %>
      <div class="gv-c-multiple-choice">
        <input class="gv-c-multiple-choice__control"
               id="<%= checkbox.id %>"
               type="checkbox"
               name="<%= id %>"
               value="<%= checkbox.value %>"
               <% if value == checkbox.value %>checked<% end %>>
        <label class="gv-c-multiple-choice__label" for="<%= checkbox.id %>"><%= checkbox.label %></label>
      </div>
    <% end %>

  </fieldset>
</div>
